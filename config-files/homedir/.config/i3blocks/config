# Memory usage
[memory]
label= 
interval=10
color=#CC7D4B

[separator]


# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label= 
interval=10
color=#F04DFF

[separator]


# Volume indicator
[volume]
label= 
instance=Master
interval=10
signal=10
color=#6EAAF7

[separator]

# Battery indicator
[battery]
label= 
interval=30
command=/bin/battery-level -s
color=#FF5D0D

[separator]

# Date Time
[Date]
label= 
command=date '+%a %d %b, %Y'
interval=100
color=#FFFDD0

[separator]

[time]
label= 
command=date '+%H:%M'
interval=5
color=#FFFDD0

[separator]

