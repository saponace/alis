@theme "drun"  // Default theme

configuration {
	font:							"Inconsolata-g 10";
    show-icons:                     true;
	icon-theme: 					"Papirus";

    display-drun: 					"";
    drun-display-format:            "{name}";

    display-window: 				"";
    window-format:					"{c} <span weight='light'>{t}</span>";

    disable-history:                false;
	sidebar-mode: 					false;
}
